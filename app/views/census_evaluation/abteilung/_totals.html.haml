= render layout: 'census_evaluation/abteilung/table_header',
    locals: { before_columns: [''],
              after_columns: [t('census_evaluation.total')]} do


  %tr
    %td= t('global.gender.female_short')
    - MemberCount::COUNT_CATEGORIES.each do |col|
      %td.right= count_value(@total.send("#{col}_f"))
    %td.right= count_value(@total.f)

  %tr
    %td= t('global.gender.male_short')
    - MemberCount::COUNT_CATEGORIES.each do |col|
      %td.right= count_value(@total.send("#{col}_m"))
    %td.right= count_value(@total.m)

    %tr
    %th= t('census_evaluation.total')
    - MemberCount::COUNT_CATEGORIES.each do |col|
      %th.right= count_value(@total.send("#{col}"))
    %th.right= count_value(@total.total)
