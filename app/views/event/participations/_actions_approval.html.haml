- if @event.requires_approval? && can?(:create, @application.next_open_approval)

  = action_button("<strong>&#x2713;</strong>&nbsp; #{t('.approve_button')}".html_safe,
                  new_group_event_participation_approval_path(participation_id: entry.id, decision: :approve),
                  nil,
                  title: t('.approve_title'),
                  method: :get)

  = action_button("<strong>&#x00D7;</strong>&nbsp; #{t('.reject_button')}".html_safe,
                  new_group_event_participation_approval_path(participation_id: entry.id, decision: :reject),
                  nil,
                  title: t('.reject_title'),
                  method: :get)
